#!/bin/bash -e

trap 'echo "error: $(basename $0): line $LINENO"; exit 1' ERR

installDir=$(noelle-config --prefix)

if test $# -lt 2 ; then
  echo "USAGE: `basename $0` INPUT_BITCODE -o OUTPUT_BITCODE"
  exit 1
fi

noelle-load \
  -load-pass-plugin $installDir/lib/MetadataCleaner.so \
  -passes='MetadataCleaner' \
  -clean-loop-metadata=true \
  $@
