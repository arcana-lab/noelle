#!/bin/bash -e

trap 'echo "error: $(basename $0): line $LINENO"; exit 1' ERR

# LLVM normalizations
LLVM_PASSES=`cat << EOF
  function(sroa),
  function(mem2reg),
  function(early-cse-memssa),
  function(memcpyopt),
  function(loop(licm)),
  function(loop(loop-deletion)),
  function(simplifycfg),
  function(instcombine),
  function(tailcallelim),
  function(loop-simplify),
  function(lcssa),
  function(loop(licm)),
  function(loop-unswitch),
  globaldce,
  globalopt,
  function(instcombine),
  ipsccp,
  dce,
  gvn,
  dse,
  adce,
  loop-simplify,
  lcssa,
  loop(indvars),
  loop(loop-deletion),
  instcombine,
  loop(indvars),
  lowerswitch,
  sroa,
  loop(loop-deletion),
  mergereturn,
  break-crit-edges,
  loop-simplify,
  lcssa,
EOF
`
n-eval opt \
  -simplifycfg-sink-common=false \
  -passes="$LLVM_PASSES"
  $@

n-eval opt -passes='function-attrs,rpo-function-attrs' $3 -o $3

# SVF normalizations
n-eval opt                        \
  -enable-new-pm=0                \
  @noelle_LLVM_ALIAS_ANALYSES_FOR_NOELLE_TRANSFORMATIONS@    \
  @noelle_load_SVF_LIBS@          \
  @noelle_SVF_TRANSFORMATIONS@    \
  $3 -o $3

