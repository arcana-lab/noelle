#!/bin/bash -e

trap 'echo "error: $(basename $0): line $LINENO"; exit 1' ERR

# process the raw data
outputFile=`mktemp`
llvm-profdata merge $1 -output=$outputFile

# run hotprofiler
n-eval opt -pgo-test-profile-file=${outputFile} -passes='print<block-freq>,pgo-instr-use' ${@:2}

# clean
rm $outputFile
