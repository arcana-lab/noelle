#!/bin/bash -e

trap 'echo "error: $(basename $0): line $LINENO"; exit 1' ERR

# LLVM normalizations
n-eval opt                        \
  @noelle_LLVM_ALIAS_ANALYSES@    \
  -mem2reg                        \
  -simplifycfg-sink-common=false  \
  -lowerswitch                    \
  -mergereturn                    \
  -break-crit-edges               \
  -loop-simplify                  \
  -lcssa                          \
  -indvars                        \
  --function-attrs                \
  --rpo-function-attrs            \
  $@

# SVF normalizations
n-eval opt                        \
  -enable-new-pm=0                \
  @noelle_LLVM_ALIAS_ANALYSES@    \
  @noelle_load_SVF_LIBS@          \
  @noelle_SVF_TRANSFORMATIONS@    \
  $3 -o $3

# NOELLE normalizations
noelle-meta-loop-embed            \
  $3 -o $3

