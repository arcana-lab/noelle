# Set the universe
Universe = vanilla

# Describe the target machine
Requirements = ((Machine != "fix.cs.northwestern.edu") && (Machine != "allagash.cs.northwestern.edu") && (Machine != "piraat.cs.northwestern.edu"))

Rank = TARGET.Mips
Copy_To_Spool = False

# Notification
Notification = error

# Notification email
Notify_User = 

# Set the environment
Getenv = True
#Environment = VAR="value";VAR2="value2"

# Set the repository
RepoPath = 

# Define the output directories
LogDir = $(RepoPath)/condor/log
Output = $(LogDir)/condor_unit.out
Error = $(LogDir)/condor_unit.err
Log = $(LogDir)/condor_unit.log

# Each job requires access to the whole machine
+IsWholeMachineJob      = false
+IsSuspensionJob        = false

# Set the priority
priority = 0

# Set the directories for the execution
InitialDir = $(RepoPath)
Executable = $(RepoPath)/condor/bin/runUnit.sh
TestsPath  = 

# Arguments of the executable
Arguments = "$(InitialDir)/unit" 

# List the tests
Queue
